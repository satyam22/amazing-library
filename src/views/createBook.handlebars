<div class="create-book">
    <h3 class="text-center">Add Book</h3>
    <form action="/catalog/book/create" method="POST">
    <div class="form-group">
        <label for="title">Book Title</label>
        <input type="text" name="title" class="form-control" placeholder="book title"required>
    </div>
    <div class="form-group">
<label for="summary">Summary</label>
<textarea placeholder="book summary" rows="4" name="summary" class="form-control" required></textarea>
    </div>
    <div class="form-group">
        <label for="isbn">ISBN</label>
        <input type="number" name="isbn" placeholder="isbn number"required class="form-control"> 
    </div>
    <div class="form-group">
        <label for="author">Author</label>
        <select class="form-control" name="author">
        {{#each authors}}
        <option value={{this._id}}>{{this.first_name}}</option>
        {{/each}}
        </select>
    </div>
    <div class="form-group">
        <label for="genres">Genres</label>
        <select class="form-control" name="genres" multiple>
            {{#each genres}}
            <option value={{this._id}}>{{this.name}}</option>
             {{/each}}
        </select>
       
    </div>
    <button type="submit" class="btn btn-default btn-block">ADD BOOK</button>
    </form>
</div>
<div class="errors">
    {{#if errorMessage}}
    <li>{{errorMessage}}</li>
    {{/if}}
</div>