<div class="create-genre">
 <h3 class="text-center">Add Genre</h3>   
<form action='/catalog/genre/create' method="POST">
<div class="form-group">
    <label for="genre Name">Genre Name</label>
    <input type="text" class="form-control" name="name" placeholder="genre name">
</div>
<button type="submit" class="btn btn-default btn-block">ADD GENRE</button>
</form>
</div>
<div class="errors">
    {{#each errors}}
    <li>{{this}}</li>
    {{/each}}
</div>
